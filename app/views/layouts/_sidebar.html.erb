<!-- BEGIN SIDEBAR -->
<aside class="main-sidebar" data-turbolinks="false">
  <section class="sidebar">

    <!-- BEGIN USER PANEL -->
    <div class="user-panel">
      <div class="pull-left image">
        <img src="<%= image_url(current_user.avatar.url(:thumb)) %>" class="img-circle" alt="User Image" />
      </div>
      <div class="pull-left info">
        <p><%= current_user.name %></p>
        <a href="#"><i class="fa fa-circle text-success"></i>@<%= current_user.username %> - Online </a>
      </div>
    </div>
    <!-- END USER PANEL -->

    <%= render partial: 'layouts/menu' %>

  </section>
</aside>
<!-- END SIDEBAR -->
