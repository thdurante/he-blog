<% content_for :title, t('application.sign_up.text') %>
<% content_for :initial_message, t('application.sign_up.message') %>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= render partial: 'shared/error_messages', locals: { object: resource } %>

  <div class="form-group has-feedback">
    <%= f.input_field :name, placeholder: t('activerecord.attributes.user.name'), class: 'form-control', autofocus: true, required: true %>
    <span class="fa fa-user form-control-feedback"></span>
  </div>

  <div class="form-group has-feedback">
    <%= f.input_field :email, placeholder: t('activerecord.attributes.user.email'), class: 'form-control', autocomplete: 'off', required: true %>
    <span class="fa fa-envelope-o form-control-feedback"></span>
  </div>

  <div class="form-group has-feedback">
    <%= f.input_field :username, placeholder: t('activerecord.attributes.user.username'), class: 'form-control', autocomplete: 'off', required: true %>
    <span class="fa fa-at form-control-feedback"></span>
  </div>

  <div class="form-group has-feedback">
    <%= f.input_field :password, placeholder: t('activerecord.attributes.user.password'), class: 'form-control', autocomplete: 'off', required: true %>
    <span class="fa fa-lock form-control-feedback"></span>
  </div>

  <div class="form-group has-feedback">
    <%= f.input_field :password_confirmation, placeholder: t('activerecord.attributes.user.password_confirmation'), class: 'form-control', autocomplete: 'off', required: true %>
    <span class="fa fa-lock form-control-feedback"></span>
  </div>

  <hr>
  <div class="row">
    <div class="col-xs-8">
      <%= render 'devise/shared/links' %>
    </div>
    <div class="col-xs-4">
      <%= f.submit t('application.sign_up.text'), class: 'btn btn-primary btn-block btn-flat',
                           data: { disable_with: '<i class=\'fa fa-spinner fa-pulse\'></i>' } %>
    </div>
  </div>

<% end %>
